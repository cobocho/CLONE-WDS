{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"jsx": "react",
		"declaration": true,
		"declarationDir": "dist",
		"emitDeclarationOnly": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true
	},
	"include": ["src"]
}
